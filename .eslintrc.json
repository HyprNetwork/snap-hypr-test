{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        // 禁止双引号，只允许使用单引号和模板字符串.
        "quotes": [
            "error",
            "single",
            {
                "allowTemplateLiterals": true
            }
        ]
    }
}